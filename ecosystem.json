{
  "apps": [
    {
      "name": "cnodejs",
      "script": "./server/server.js",
      "env_production": {
        "NODE_ENV": "production",
        "HOST": "localhost"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "root",
